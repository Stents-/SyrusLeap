<Window x:Class="SyrusLeapServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SyrusLeapServer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="SendBtn" Content="Send Message" HorizontalAlignment="Left" Margin="221,83,0,0" VerticalAlignment="Top" Width="87" Click="SendBtn_Click"/>
        <TextBox x:Name="TextBox" HorizontalAlignment="Left" Height="23" Margin="96,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="Text" HorizontalAlignment="Left" Margin="340,83,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="61" Width="213"/>
        <CheckBox x:Name="Startup" Content="Start with Windows?" HorizontalAlignment="Left" Margin="88,132,0,0" VerticalAlignment="Top" Checked="Startup_Checked" Unchecked="Startup_Unchecked"/>

    </Grid>
</Window>
